<html>
<head>
    <title>Ogün Can Kaya</title>
    <link href="http://fonts.googleapis.com/css?family=Raleway:400,700"
    rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
    <header id="main_navigation" class="clearfix">
        <%= link_to "<span class='name'>Ogün Can KAYA</span>".html_safe, root_path %>
        <nav>
            <%= link_to "Yazılarım", posts_path %>
            <%= link_to "Projelerim", projects_path %>
            <%= link_to "İletişim", contact_path %>
        </nav>
    </header>
    
<div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
        <p class="date"><%= @project.created_at.strftime('%A, %B %d') %> </p>
        <h1><%= @project.title %></h1>
        <hr>
    </header>
    <div id="content">
        <%= markdown @project.description %>
        <a href="<%= @project.link %>" class="project_button" target="_blank">Buradan Ulaşabilirsiniz</a>
    </div>
    
    <hr>
    <%= link_to "Edit", edit_project_path(@project) %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Emin misin?"} %>
</div>

</body>
<br>
</html>